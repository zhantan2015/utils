{
  "compilerOptions": {
      "target": "ESNext",
      "moduleResolution": "Node", 
      "outDir": "dist/",
      "baseUrl": "./",
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
          "@/*": ["./src/*"]
      }
  },
  "exclude": [
      "node_modules"
  ],
  "include": [
      "src/**/*.ts"
  ]
}